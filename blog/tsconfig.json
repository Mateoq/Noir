{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es2016"
    ],

    "types": [
      "node"
    ],

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": false,

    "sourceMap": true,
    "outDir": "../build"
  },
  "include": [
    "./src/server/**/*.ts",
    "./config/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
