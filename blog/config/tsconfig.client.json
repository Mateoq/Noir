{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es2015.promise",
      "dom"
    ],

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": false,

    "sourceMap": true,
    "outDir": "../build",

    "jsx": "react"
  },
  "include": [
    "../src/client/**/*.ts",
    "../src/shared/**/*.ts",
    "../types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
