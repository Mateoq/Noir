{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": [
      "es2016"
    ],

    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "strict": true,
    "strictNullChecks": false,

    "sourceMap": true,
    "outDir": "../build"
  },
  "include": [
    "../src/client/**/*.ts",
    "../src/shared/**/*.ts",
    "../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
