{
  "name": "Noir_Blog",
  "version": "0.0.1",
  "description": "Small blog",
  "main": "index.js",
  "repository": "https://github.com/Mateoq/Noir",
  "author": "Mateoq",
  "license": "MIT",
  "scripts": {
    "postinstall": "yarn run init",
    "init": "./scripts/gen-types.sh",
    "start:server:dev": "nodemon --watch build build/server.js",
    "build:server:dev": "yarn run build:server -- -w",
    "build:server": "tsc -p config/tsconfig.server.json",
    "build:client:dev": "tsc src/client/index.ts -w",
    "start:dev": "yarn run build:server && concurrently --kill-others --prefix '[{name}]' --names 'LINTER,CLIENT,SERVER,EXECUTION' --prefix-colors 'red,green,blue,gray' 'yarn run lint:dev' 'yarn run build:client:dev' 'yarn run build:server:dev' 'yarn run start:server:dev'",
    "lint:ts": "tslint -c config/tslint.json 'src/**/*.ts'",
    "lint:sass": "sass-lint -c config/sass-lint.yml 'src/**/*.scss' --verbose --no-exit",
    "lint": "yarn run lint:ts && yarn run lint:sass",
    "lint:dev": "nodemon --watch src --exec 'yarn run lint:ts -- --force && yarn run lint:sass'",
    "verify": "tsc -p config/tsconfig.server.json --noEmit && yarn run lint"
  },
  "dependencies": {
    "@types/boom": "^4.3.7",
    "@types/hapi": "^16.1.9",
    "@types/joi": "^10.4.1",
    "boom": "^5.2.0",
    "good": "^7.3.0",
    "hapi": "^16.5.2",
    "joi": "^10.6.0",
    "rxjs": "^5.4.3",
    "sass-lint": "^1.11.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "ghooks": "^2.0.0",
    "nodemon": "^1.11.0"
  },
  "config": {
    "ghooks": {
      "pre-push": "yarn run verify",
      "post-merge": "yarn"
    }
  }
}
