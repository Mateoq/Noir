{
  "name": "Noir_Blog",
  "version": "0.0.1",
  "description": "Small blog",
  "main": "index.js",
  "repository": "https://github.com/Mateoq/Noir",
  "author": "Mateoq",
  "license": "MIT",
  "scripts": {
    "init": "./scripts/gen_types.sh",
    "start": "node build/server/main.js",
    "start:dev": "yarn run build:server && concurrently --kill-others --prefix '[{name}]' --names 'LINTER,CLIENT,SERVER,EXECUTION' --prefix-colors 'red,green,blue,gray' 'yarn run lint:dev' 'yarn run build:client:dev' 'yarn run build:server:dev' 'yarn run start:server:dev'",
    "start:server:dev": "nodemon --watch build build/server/main.js",
    "build": "yarn run build:server && yarn run build:client",
    "build:server": "tsc -p config/tsconfig.server.json",
    "build:client": "webpack --config config/webpack.config.prod.ts",
    "build:server:dev": "yarn run build:server -w",
    "build:client:dev": "webpack-dev-server --config config/webpack.config.dev.ts",
    "lint:ts": "tslint -c config/tslint.json 'src/**/*.ts' --force",
    "lint:sass": "sass-lint -c config/sass-lint.yml 'src/**/*.scss' --verbose --no-exit",
    "lint": "yarn run lint:ts && yarn run lint:sass",
    "lint:dev": "nodemon --watch src --exec 'yarn run lint:ts && yarn run lint:sass'",
    "verify": "tsc -p config/tsconfig.server.json --noEmit && yarn run lint"
  },
  "dependencies": {
    "@types/autoprefixer": "^6.7.3",
    "@types/boom": "^4.3.7",
    "@types/es6-promise": "^0.0.33",
    "@types/extract-text-webpack-plugin": "^3.0.0",
    "@types/hapi": "^16.1.9",
    "@types/inert": "^4.2.3",
    "@types/joi": "^10.4.1",
    "@types/node": "^8.0.28",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.1",
    "@types/react": "16.0.2",
    "@types/react-router": "^4.0.15",
    "@types/webpack": "^3.0.11",
    "@types/webpack-dev-middleware": "^1.9.3",
    "@types/webpack-hot-middleware": "^2.16.0",
    "autoprefixer": "^7.1.4",
    "awesome-typescript-loader": "^3.2.3",
    "boom": "^5.2.0",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "es6-promise": "^4.1.1",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^0.11.2",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.5.2",
    "inert": "^4.2.1",
    "joi": "^10.6.0",
    "json-loader": "^0.5.7",
    "mdn-polyfills": "^5.2.0",
    "node-sass": "^4.5.3",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "postcss-loader": "^2.0.6",
    "react": "^16.0.0",
    "react-router": "^4.2.0",
    "resolve-url-loader": "^2.1.0",
    "rxjs": "^5.4.3",
    "sass-lint": "^1.11.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-hot-middleware": "^2.19.1"
  }
}
